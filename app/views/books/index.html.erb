<h2>Books</h2>
<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
  </tr>
  <% if @books %>
  <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%=link_to "Show", book_path(book.id) %></td>
      <td><%=link_to "Edit", edit_book_path(book.id) %></td>
      <td><%=link_to "Destroy", book_path(book.id), method: :delete %></td>
    </tr>
  <% end %>
  <% end %>

</table>
<h3>New book</h3>
<% if flash[:danger] %>
  <div style="color:red">
    <h4><%= flash[:error] %> errors prohibited this book from being saved:</h4>
    <% flash.each do |message_type, message| %>
      <% if message_type == 'danger' %>
        <%=message.html_safe %>
      <% end%>
    <% end %>
  </div>
<% end %>
<%= form_with model:@book, local:true do |f| %>

  <p>Title</p>
  <%= f.text_field :title %>

  <p>Body</p>
  <%= f.text_area :body %>

  <p><%= f.submit 'Create Book' %></p>

<% end %>